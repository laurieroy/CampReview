<% include ./partials/header %>
    <div class="row text-center">
        <div class="col-md-12">
            <form class="form-signin" action="/reset.<%= token %>" method="POST">
                <h1 class="h3 mb-3" > Reset Password:</h1>
                <div class="form-group text-left">
                    <label for="password">New Password:</label>
                    <input class="form-control" type="password" name="password" value="" placeholder="New Password" autofocus="autofocus">
                </div>
                <div class="form-group text-left">
                    <label for="confirm">Confirm Password:</label>
                    <input class="form-control" type="password" name="confirm" value="" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update password</button>
                </div>
            </form>
        </div>
         <a href="/campgrounds">Go Back</a>
    </div>
<% include ./partials/footer %>